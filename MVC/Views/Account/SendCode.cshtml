@model MVC.Models.SendCodeViewModel
@{
    ViewBag.Title = "Verification";
}

<link rel="stylesheet" href="~/Content/Layout.css">
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>Verification Code:</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            Select your Two-Factor Authentication Provider:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
        <div class="col-md-8">
            If your Provider is not on the list contact Administration-Center.<br />
            We will help, just give us a while.
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
