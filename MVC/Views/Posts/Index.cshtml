@model IEnumerable<TNAI.Model.Entities.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Posts</h1>

@foreach (var item in Model)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title post-title">@Html.DisplayFor(modelItem => item.Title)</h1>
            by @Html.DisplayFor(modelItem => item.Author)
        </div>
        <div class="panel-body">
            @Html.DisplayFor(modelItem => item.Content)
        </div>  
        <div class="panel-footer">
            @Html.ActionLink("Read more", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
        </div>
    </div>
}
